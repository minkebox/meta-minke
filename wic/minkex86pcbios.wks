# short-description: Create an EFI disk image for genericx86*
# long-description: Creates a partitioned EFI disk image for genericx86* machines
part --source bootimg-pcbios --ondisk sda --label boot --active --align 4 --overhead-factor 1 --extra-space 0
part / --source rootfs --ondisk sda --fstype=ext4 --label platform --align 4 --use-uuid --overhead-factor 1 --extra-space 0
bootloader  --ptable gpt --timeout=1  --append="rootwait rootfstype=ext4 console=tty0 console=ttyUSB0,115200"
